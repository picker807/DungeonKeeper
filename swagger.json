{
    "swagger": "2.0",
    "info": {
    "title": "Dungeon Keeper",
    "description": "A database that organizes spells for Advanced Dungeons and Dragons Second Edition. Users can view spells, create characters and organize spellbooks based on their character.",
    "version": "1.0.0"
},
"host": "dungeon-keeper.onrender.com",
"basePath": "/",
"schemes": [
"https"
],
"tags":[{
    "name":"Users",
    "description":"Operations related to users"
}, 
    { "name": "Characters",
    "description": "Operations related to characters"},
    {"name": "Spells",
    "description":" Operations related to spells"},
{"name": "Spellbooks",
"description": "Operations related to character spellbooks"}
],
"paths": {
    "/spells": {
        "get": {
        "summary": "Get a list all of spells",
        "responses": {
            "200": {
            "description": "A list of spells",
            "schema":{
              "type":"array",
              "items":{ 
                "$ref": "#/definitions/Spells"       
              }
            }
          }
        },
        "tags": ["Spells"]
        },
        "post": {
        "summary": "Create a new spell",
        "parameters": [
          {
            "name": "spell",
            "in": "body",
            "description": "The spell object",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Spell name",
                  "example": "Fireball"
                },
                "level": {
                  "type": "integer",
                  "description": "Spell level",
                  "example": 3
                },
                "school": {
                  "type": "string",
                  "description": "Spell school",
                  "example": "Evocation"
                },
                "components": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Spell components",
                  "example": ["Verbal", "Somatic"]
                },
                "range": {
                  "type": "string",
                  "description": "Spell range",
                  "example": "120 feet"
                },
                "areaOfEffect": {
                  "type": "string",
                  "description": "Area of effect",
                  "example": "20-foot radius"
                },
                "save": {
                  "type": "string",
                  "description": "Saving throw information",
                  "example": "Dexterity"
                },
                "castingTime": {
                  "type": "string",
                  "description": "Casting time",
                  "example": "1 action"
                },
                "duration": {
                  "type": "string",
                  "description": "Spell duration",
                  "example": "1 minute"
                },
                "description": {
                  "type": "string",
                  "description": "Spell description",
                  "example": "A fiery explosion"
                }
              },
              "required": ["name", "level", "school", "components", "range", "areaOfEffect", "save", "castingTime", "duration", "description"]
            }
          }
        ],
        "responses": {
        "201": {
            "description": "Spell created successfully"
        },
        "400":{ 
          "description":"Bad Request"       
        }
      },
        "tags": ["Spells"]
        } 
    },
    "/spells/{spellId}": {
        "put": {
        "summary": "Update a spell by ID",
        "parameters": [{
            "type": "string",
            "name": "spellId",
            "in": "path",
            "required": true
            },
            {
            "name": "updatedSpell",
            "in": "body",
            "description": "The updated spell object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Spells"
            }
          }
          ],
        "responses": {
            "200": {
            "description": "Spell updated successfully",
            "schema": {
              "$ref": "#/definitions/Spells"
            }
          }
        },
        "tags": ["Spells"]
    },
    "get": {
        "summary": "Get a spell by ID",
        "parameters": [
            {"type": "string",
            "name": "spellId",
            "in": "path",
            "required": true
            }
        ],
        "responses": {
        "200": {
            "description": "A single spell",
            "schema": {
              "$ref": "#/definitions/Spells"
            }
        },
        "404": {
            "description": "Spell not found"
        }
        },
        "tags": ["Spells"]
    },
    "delete": {
        "summary": "Delete a spell by ID",
        "parameters": [
        {   "type": "string",
            "name": "spellId",
            "in": "path",
            "required": true
            }
        ],
        "responses": {
            "204": {
            "description": "Spell deleted successfully",
            "schema": {
              "$ref": "#/definitions/Spells"
            }
            },
            "404": {
              "description": "Spell not found"
          }
        },
        "tags": ["Spells"]
        }
    },
    "/character": {
        "post": {
            "summary": "Create a new character",
            "responses": {
                "201": {
                "description": "Character created successfully"
            }
        },
        "tags": ["Characters"]
        },
        "put": {
            "summary": "Update a character",
            "responses": {
                "200": {
                "description": "Character updated successfully"
            }
        },
        "tags": ["Characters"]
        }
    },
    "/character/{characterId}": {
        "parameters": [
            {"type": "string",
            "name": "characterId",
            "in": "path",
            "required": true            
            }
        ],
        "get": {
            "summary": "Get a character by ID",
            "responses": {
                "200": {
                "description": "A single character"
            },
                "404": {
                "description": "Character not found"
            }
        },
        "tags": ["Characters"]
        },
        "delete": {
            "summary": "Delete a character by ID",
            "responses": {
                "204": {
                "description": "Character deleted successfully"
            }
        },
        "tags": ["Characters"]
        }
    },
    "/user": {
        "post": {
        "summary": "Create a new user",
        "responses": {
            "201": {
                "description": "User created successfully"
            }
        },
        "parameters": [
          {"name":"user",
          "in":"body",
          "description": "The User Object",
          "required": true,
          "schema": {
            "$ref":"#/definitions/User"
          }

        }],
        "tags": ["Users"]
        },
        "put": {
        "summary": "Update a user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "user",
            "in": "body",
            "description": "The updated user object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
            "200": {
                "description": "User updated successfully"
            }
        },
        "tags": ["Users"]
        },
        "get": {
        "summary": "Get a list of users",
        "responses": {
            "200": {
                "description": "Success",
                "schema": {
                  "$ref": "#/definitions/User"
                }
              },
              "400": {
                "description": "Bad Request"
              },
              "500": {
                "description": "Server error"
              }
        },
        "tags": ["Users"]
        }
    },
    "/user/{userID}": {
        "get": {
          "summary":"Get user by ID",
          "parameters": [{ 
            "name": "userID",
            "in": "path",
            "required": true,
            "type":"string"
            }],
            "responses": {
                "200": {
                    "description": "A single user",
                    "schema":{
                      "$ref":"#/definitions/User"
                    }
            },
                "404": {
                    "description": "User not found"
            }
        },
        "tags": ["Users"]
        },
        "delete": {
            "summary": "Delete a user by ID",
            "responses": {
                "204": {
                    "description": "User deleted successfully",
                    "schema":{
                      "$ref": "#/definitions/User"
                    }
            }
        },
        "tags": ["Users"]
        }
    },
    "/user/login": {
        "get": {
            "summary": "User login",
            "responses": {
                "200": {
                    "description": "User logged in successfully",
                    "schema":{
                      "$ref": "#/definitions/User"
                    }
            }
        },
        "tags": ["Users"]
        }
    },
    "/user/logout": {
        "get": {
            "summary": "User logout",
            "responses": {
                "200": {
                    "description": "User logged out successfully",
                    "schema":{
                      "$ref": "#/definitions/User"
                    }
            }
        },
        "tags": ["Users"]
        }
    },
    "/spellbook": {
        "post": {
        "summary": "Add a spell to a character's spellbook",
        "parameters": [
          {
            "name": "spellbook",
            "in": "body",
            "description": "The spellbook object",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "spells": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Spells"
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Spellbook Created",
            "schema":{
              "$ref":"#/definitions/Spellbooks"
            }}
        },
        "tags": ["Spellbooks"]
        },
        "get": {
        "summary": "Get all Spellbooks",
            "responses": {
                "200": {
                    "description": "Ok",
                    "schema":{
                      "$ref": "#/definitions/Spellbooks"
                    }
            }
        },
        "tags": ["Spellbooks"]
        }
    },
    "/spellbook/{SpellbookId}": {
        "put": {
        "summary": "Update a character's spellbook",
        "parameters": [
          { "type":"string",
          "name": "characterId",
          "in": "path",
          "required": true
        },
        {
          "name": "updatedSpellbook",
          "in": "body",
          "description": "The updated spellbook object",
          "required": true,
          "schema": {
            "$ref": "#/definitions/Spellbooks"
          }
        }
      ],
            "responses": {
                "200": {
                    "description": "Spellbook updated successfully",
                    "schema":{
                      "$ref":"#/definitions/Spellbooks"
                    }
            }
        },
        "tags": ["Spellbooks"]
        },
        "delete": {
        "summary": "Delete a character's spellbook by ID",
        "parameters": [
          {
            "type": "string",
            "name": "SpellbookId",
            "in": "path",
            "required": true
          }],
            "responses": {
                "204": {
                  "description": "Spellbook deleted successfully",
                  "schema": {
                    "$ref": "#/definitions/Spellbooks"
                    }
            },
            "404":{"description":"Spellbook Not Found"}
        },
        "tags": ["Spellbooks"]
        }
    }
  },
  "definitions":{
