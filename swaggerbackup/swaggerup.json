{
    "swagger": "2.0",
    "info": {
    "title": "Dungeon Keeper",
    "description": "A database that organizes spells for Advanced Dungeons and Dragons Second Edition. Users can view spells, create characters and organize spellbooks based on their character.",
    "version": "1.0.0"
},
    "host": "localhost:3000",
    "basePath": "/",
    "schemes": [
    "http",
    "https"
    ],
    "paths": {
        "/spells": {
        "get": {
        "description": "Retrives all spells available",
        "responses": {
            "200": {
                "description": "Request complete"
            },
            "400": {
                "description": "Bad Request"
            }
        },
        "/spells/{id}":{
            "get":{
                "description":"Retrieves one spell by Id",
                "responses":{
                    "200": {
                        "description": "Request complete"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }

        }
    }
    }
}
}